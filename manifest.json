{
	"manifest_version": 3,
	"name": "Chrome Extension Boilerplate",
	"version": "1.0.0",
	"description": "A modern Chrome extension boilerplate using TypeScript",
	"permissions": ["activeTab", "storage"],
	"action": {
		"default_popup": "ui/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "scripts/background/index.ts",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/content/index.ts"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"options_ui": {
		"page": "ui/options.html",
		"open_in_tab": true
	}
}
