{
	"manifest_version": 3,
	"name": "Chrome Extension Boilerplate",
	"version": "1.0.0",
	"description": "A modern Chrome extension boilerplate using TypeScript",
	"permissions": ["activeTab", "storage"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"options_ui": {
		"page": "./options.html",
		"open_in_tab": true
	}
}
